{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block dashboard %}User{% endblock %}

{% block body %}
    <table class="table table_show">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>ExternalId</th>
                <td>{{ user.externalId }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}" class="btn btn-md btn-default">Back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-md btn-primary">Edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}